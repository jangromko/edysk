<% content_for :title, "Odzyskaj hasło" %>
<div class="bgimg w3-display-container w3-animate-opacity w3-text-white">
  <div class="w3-display-middle center">
    <div class="frame w3-animate-top">
      <div class="sectionTitle">
        Odzyskaj hasło
      </div>
      <% if @forgotten_password.errors.any? %>
          <div class="errors">
            <ul>
              <% @forgotten_password.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <%= form_for @forgotten_password, url: forgot_password_url, method: "post" do |f| %>
          <%= f.text_field :login, class: "inputStandard w3-animate-top", placeholder: "Login", required: true %>
          <%= f.email_field :email, class: "inputStandard w3-animate-top", placeholder: "E-mail" , required: true%>
          <%= f.submit "Przypomnij hasło", class: "buttonDefault mediumDarkRed w3-animate-top" %>
      <% end %>

    </div>
  </div>
</div>
