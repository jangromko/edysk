<h1>Użytkownicy</h1>

<% if @admin_users.any? %>
<table>
  <thead>
    <tr>
      <th>Login</th>
      <th>Email</th>
      <th>Założony</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_users.each do |admin_user| %>
      <tr>
        <td><%= admin_user.login %></td>
        <td><%= admin_user.email %></td>
        <td><%= admin_user.created_at %></td>

        <td><%= link_to 'Usuń', admin_user_path(admin_user), method: :delete, data: { confirm: 'Jesteś pewien?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
    <% else %>
    Brak użytkowników
    <% end %>
